/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": false,
      "strict": false,
      "noImplicitReturns": false,
      "noFallthroughCasesInSwitch": false,
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": false,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "target": "ES2022",
      "module": "es2020",
      "lib": [
        "es2021",
        "dom"
      ],
      "paths": {
        "@keka/shared": [
          "dist/keka-shared"
        ],
        "@keka/shared/lib/app-config": [
          "dist/keka-shared/lib/app-config"
        ],
        "@keka/shared/lib/auth": [
          "dist/keka-shared/lib/auth"
        ],
        "@keka/shared/lib/core": [
          "dist/keka-shared/lib/core"
        ],
        "@keka/shared/lib/shared": [
          "dist/keka-shared/lib/shared"
        ],
        "@keka/shared/lib/shared/extensions": [
          "dist/keka-shared/lib/shared/extensions"
        ]
      },
      "useDefineForClassFields": true
    },
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictInjectionParameters": false,
        "strictInputAccessModifiers": false,
        "strictTemplates": false,
        "allowSyntheticDefaultImports": true,
    }
}
